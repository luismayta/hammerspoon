# EditorConfig helps maintain consistent coding styles
# http://EditorConfig.org

root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java - prefer spaces (4 is common for Java; adjust if your project uses tabs)
[*.java]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Python - 4 spaces
[*.py]
indent_style = space
indent_size = 4

# Go - use tabs (gofmt uses tabs; no indent_size necessary)
[*.go]
indent_style = tab

# Markdown / MDX - preserve trailing whitespace (used for line breaks in Markdown)
[*.{md,mdx}]
trim_trailing_whitespace = false
insert_final_newline = true
indent_style = space
indent_size = 2

# Common web / config / infra files
[*.{js,ts,tsx,json,yml,yaml,toml,graphql,hcl,tf,hbs,sh,el}]
indent_style = space
indent_size = 2

# Lua
[*.lua]
indent_style = space
indent_size = 2

# Makefiles and similar - tabs
[Makefile]
indent_style = tab

[*.{make,mk}]
indent_style = tab

# Batch files - tabs
[*.bat]
indent_style = tab

# Minified files - avoid changing them
[*.min.js]
indent_style = ignore
insert_final_newline = false
trim_trailing_whitespace = false

[**/*.min.js]
indent_style = ignore
insert_final_newline = false
trim_trailing_whitespace = false
