{
  "baseUrl": "https://github.com/luismayta/hammerspoon",
  "ignorePatterns": [
    {
      "pattern": "^mailto:.*@hadenlabs\\.com"
    },
    {
      "pattern": "^https://github.com/luismayta/hammerspoon/compare"
    },
    {
      "pattern": "^http://localhost"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/docs",
      "replacement": "{{BASEURL}}/docs"
    },
    {
      "pattern": "^/",
      "replacement": "{{BASEURL}}/"
    }
  ],

  "timeout": "20s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "30s",
  "aliveStatusCodes": [200, 201, 202, 206]
}
